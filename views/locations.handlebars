  align;
}

.center{
    width: 350px;
    height: 300px;
}

</style>


<div class="container background ">
<div class="row" "overflow-auto">
    <h2>Chose a National Park!</h2>
    <ul class="list-group">
        {{#each parks}}
        <li class="list-group-item" value={{id}}>{{parkname}}</li>
        {{/each}}

    </ul>
</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
    $("li").click((e) => {
        let parkId = e.currentTarget.attributes[1].value
        let url = window.location.pathname + "/" + parkId;
        window.location.replace(url);
    });
</script>